{
  "compilerOptions": {
    "rootDirs": ["src"],
    "strict": true,
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@prisma-generator-pothos-codegen": ["../../src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
